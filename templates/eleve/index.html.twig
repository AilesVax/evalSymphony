{% extends 'base.html.twig' %}

{% block title %}Hello EleveController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Liste des élèves</h1>
           <a href="{{ path('app_eleve_ajouter') }}" class="btn-blue mb-20">Ajouter un élève</a>


    <table>
    
        <thead>
            <tr>
                <th>Classe</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for eleve in eleves %}
                <tr>
                    <td>{{ eleve.id }}</td>
                    <td>{{ eleve.prenom }}</td>
                    <td>{{ eleve.nom }}</td>

                    <td>
                        <div class="actions">

                            <!-- Update -->
                            <form action="{{ path('eleve_update', { id: eleve.id }) }}" method="post" class="action-left">
                                <input type="text" name="prenom" value="{{ eleve.prenom }}">
                                <input type="text" name="nom" value="{{ eleve.nom }}">
                                <button type="submit" class="modify">Modifier</button>
                            </form>
                            
                            <!-- Delete -->
                            <form action="{{ path('eleve_delete', { id: eleve.id }) }}" method="post" class="action-right">
                                <button type="submit" class="delete">Supprimer</button>
                            </form>

                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
